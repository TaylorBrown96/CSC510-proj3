{
  "name": "proj2",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "scripts": {
    "check-fl": "bun run lint-fix && bun run format",
    "format": "concurrently \"bun format:backend\" \"bun format:frontend\"",
    "format:backend": "cd backend && uv run ruff format .",
    "format:frontend": "cd frontend && bun run prettier . --write",
    "lint-fix": "concurrently \"bun lint-fix:backend\" \"bun lint-fix:frontend\"",
    "lint-fix:backend": "cd backend && uv run ruff check . --fix",
    "lint-fix:frontend": "cd frontend && bun run lint --fix",
    "dev:backend": "cd backend && uv run uvicorn eatsential.index:app --reload",
    "dev:frontend": "cd frontend && bun run dev",
    "dev": "concurrently \"bun dev:backend\" \"bun dev:frontend\""
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "frontend"
  ]
}
